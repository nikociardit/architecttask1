# Application settings
DEBUG=false
HOST=0.0.0.0
PORT=8000

# Security settings
SECRET_KEY=your-secret-key-change-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Database settings
DATABASE_URL=sqlite:///./endpoint_management.db

# CORS settings
CORS_ORIGINS=["http://localhost:3000","https://yourdomain.com"]

# Active Directory settings (optional)
AD_SERVER=
AD_PORT=636
AD_USE_SSL=true
AD_BASE_DN=
AD_BIND_USER=
AD_BIND_PASSWORD=
AD_USER_SEARCH_BASE=
AD_GROUP_SEARCH_BASE=

# VPN settings (WireGuard)
VPN_SERVER_ENDPOINT=your-server-ip
VPN_SERVER_PUBLIC_KEY=your-server-public-key
VPN_SERVER_PRIVATE_KEY=your-server-private-key
VPN_NETWORK=10.0.0.0/24
VPN_PORT=51820

# Redis settings
REDIS_URL=redis://localhost:6379

# Email settings (for notifications)
SMTP_SERVER=
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_FROM_EMAIL=

# File storage settings
MAX_FILE_SIZE=104857600
ALLOWED_EXTENSIONS=[".exe",".msi",".zip",".ps1",".bat"]

# Screen recording settings
MAX_RECORDING_SIZE=1073741824
RECORDING_RETENTION_DAYS=30
DEFAULT_RECORDING_QUALITY=medium

# Client settings
CLIENT_HEARTBEAT_INTERVAL=60
CLIENT_OFFLINE_THRESHOLD=300

# Logging settings
LOG_LEVEL=INFO
LOG_FILE=app.log
